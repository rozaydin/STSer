<idea-plugin>
  <id>com.rhtech.stser</id>
  <name>STSer</name>
  <version>1.0</version>
  <vendor email="ridvanozaydin@gmail.com" url="https://github.com/rozaydin/STSer">Rıdvan Özaydın</vendor>

  <description><![CDATA[
      <h1>STSer</h1>
      <h5>Reads STS configuration from downloaded STS config (default location is ${user.home}/Downloads) and sets in to active intellij run configuration</h5>
    ]]></description>

  <change-notes><![CDATA[
      Initial Release
      1. Supports manual AWS env var setup (Tools->STSer)
      2. Supports automatic AWS env var setup (listens ${user.home}/Donwloads and when a new sts.txt file put reflects changes to active intellij run configuration)
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <applicationService serviceInterface="com.rhtech.stser.STSConfigService" serviceImplementation="com.rhtech.stser.STSConfigService"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="STSer" class="com.rhtech.stser.STSer" text="STSer" description="STSer Plugin Configuration" icon="/icons/action_icon.png">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>

    <application-components>
        <component>
            <implementation-class>com.rhtech.stser.STSApp</implementation-class>
        </component>
    </application-components>
</idea-plugin>